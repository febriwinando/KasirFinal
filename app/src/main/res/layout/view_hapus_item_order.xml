<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/backgoundovalputih"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:id="@+id/emoticon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/warning"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_toEndOf="@id/emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peringatan!"
            android:textSize="25sp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/tvTutupDialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_gravity="end"
            android:src="@drawable/close"
            android:focusable="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog_item_notes" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:shadowColor="@color/color2"
        android:text="Apakah anda yakin akan menghapus item tersebut, dari daftar pesanan?"
        android:id="@+id/tvWarning1"
        />

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Ya, Hapus!"
            android:background="@drawable/backgroundcolor5"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:id="@+id/txtAbsen"

            />

    </LinearLayout>

</LinearLayout>