<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".transaksi.OrderActivity"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/layoutHeader"
        >
        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_left"
            android:id="@+id/kembalidariOrderActivity"
            app:tint="@color/color4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/font_side"
            android:text="Pesanan Meja"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilVisitor"
        android:layout_below="@+id/layoutHeader"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@drawable/ic_visitors"
        app:hintTextColor="@color/text_color"
        app:endIconTint="@color/color4"
        app:startIconTint="@color/color4"
        android:textColorHint="@color/text_color"
        app:boxStrokeColor="@color/text_color"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Pengunjung"
            android:imeOptions="actionNext"
            android:inputType="textCapWords|textAutoCorrect"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/font_side"/>
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tilVisitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvListProduk"
        tools:listitem="@layout/grid_row_produk_transaksi_dua"
        android:layout_above="@+id/layoutbtm"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        />

    <RelativeLayout
        android:id="@+id/layoutbtm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/ic_cari"
            app:hintTextColor="@color/text_color"
            app:endIconTint="@color/color4"
            app:startIconTint="@color/color4"
            android:textColorHint="@color/text_color"
            app:boxStrokeColor="@color/text_color"
            android:layout_toStartOf="@+id/ibNextTransaksi"
            android:layout_centerVertical="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietCariProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="cari menu ..."
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18sp"
                android:textColor="@color/text_color"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ibNextTransaksi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_right"
            android:clickable="false"
            app:tint="@color/color4"
            />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>