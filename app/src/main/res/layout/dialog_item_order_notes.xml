<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/backgoundovalputih">

    <TextView
        android:id="@+id/tvMenuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Ayam"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Catatan -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNote"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/note"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:boxStrokeColor="@color/text_color"
        app:startIconTint="@color/color4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Catatan pesanan (contoh: tanpa bawang, saus terpisah)"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top|start"
            android:minLines="2"
            android:maxLines="4"
            android:textSize="16sp"
            android:textColor="@color/font_side"
            android:scrollbars="vertical"
            android:overScrollMode="always" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Jumlah Item -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilQtyNote"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:boxStrokeColor="@color/text_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietQtyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kuantitas item dengan catatan"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/font_side" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Checkbox Kategori -->
    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Keterangan Tambahan:"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp" />

    <!-- Container Checkbox -->
    <LinearLayout
        android:id="@+id/containerCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_checkbox_group"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </LinearLayout>

    <!-- Tombol -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/btnSave"
            android:layout_margin="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="+ Tambah Catatan"
            android:textAlignment="center"
            android:background="@drawable/backgroundcolor5"
            android:textColor="@color/white"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
